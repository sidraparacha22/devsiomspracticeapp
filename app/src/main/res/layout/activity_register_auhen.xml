<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/registerAccountBtn"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_23sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_23sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/_40sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/_16sdp" />


            <TextView
                android:id="@+id/mainTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="Letâ€™s Get Started!"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toTopOf="@id/guideline3" />

            <TextView
                android:id="@+id/subtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="Create an account on MNZL to get all features"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@id/mainTxt" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/_42sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/subtxt"
                android:layout_marginTop="@dimen/_26sdp"
                android:id="@+id/fname"
                android:hint="First Name"
                android:drawableStart="@drawable/user"
                android:background="@drawable/edittext"
                android:fontFamily="@font/roboto"
                android:backgroundTint="@color/light_grey"
                android:inputType="text"
                android:imeOptions="actionNext"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/_42sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/fname"
                android:layout_marginTop="@dimen/_16sdp"
                android:id="@+id/lastName"
                android:hint="Last Name"
                android:drawableStart="@drawable/user"
                android:background="@drawable/edittext"
                android:fontFamily="@font/roboto"
                android:backgroundTint="@color/light_grey"
                android:inputType="text"
                android:imeOptions="actionNext"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/_42sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/lastName"
                android:layout_marginTop="@dimen/_16sdp"
                android:id="@+id/userName"
                android:hint="User Name"
                android:drawableStart="@drawable/user"
                android:background="@drawable/edittext"
                android:fontFamily="@font/roboto"
                android:backgroundTint="@color/light_grey"
                android:inputType="text"
                android:imeOptions="actionNext"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/_42sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/userName"
                android:layout_marginTop="@dimen/_16sdp"
                android:id="@+id/emailRegister"
                android:hint="Email"
                android:drawableStart="@drawable/email"
                android:background="@drawable/edittext"
                android:fontFamily="@font/roboto"
                android:backgroundTint="@color/light_grey"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/_42sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/emailRegister"
                android:layout_marginTop="@dimen/_16sdp"
                android:id="@+id/pass"
                android:hint="Password"
                android:drawableStart="@drawable/passlock"
                android:background="@drawable/edittext"
                android:fontFamily="@font/roboto"
                android:backgroundTint="@color/light_grey"
                android:inputType="textPassword"
                android:imeOptions="actionNext"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/_42sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/pass"
                android:layout_marginTop="@dimen/_16sdp"
                android:id="@+id/cpassRegister"
                android:hint="Confirm Password"
                android:drawableStart="@drawable/user"
                android:background="@drawable/edittext"
                android:fontFamily="@font/roboto"
                android:backgroundTint="@color/light_grey"
                android:inputType="text"
                android:imeOptions="actionDone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                app:layout_constraintTop_toBottomOf="@id/cpassRegister"
                app:layout_constraintBottom_toBottomOf="@id/guideline4"
                android:id="@+id/view"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <TextView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_39sdp"
        android:text="CREATE"
        android:id="@+id/registerAccountBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/gradient_button"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toTopOf="@id/accountTv"
        android:layout_marginBottom="@dimen/_28sdp"
       />


    <TextView
        android:id="@+id/accountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Already have an account?"
        android:textColor="@color/grey"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@id/view2"
        app:layout_constraintEnd_toStartOf="@id/gotoLogin"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Here"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintStart_toEndOf="@id/accountTv"
        app:layout_constraintBottom_toTopOf="@id/view2"
        android:id="@+id/gotoLogin"/>


<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/view2"/>
</androidx.constraintlayout.widget.ConstraintLayout>